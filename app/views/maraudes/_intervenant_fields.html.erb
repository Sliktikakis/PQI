<div class="nested-fields">
  <div class="form-inline">
  	<% if Rails.env.production? %>
    	<%= f.text_field :nom, data: {autocomplete_source: Intervenant.where.not("nom ILIKE ?", "%/%").order(:nom).map(&:nom)}, class: 'form-control intervenant-nom' %>
    <% else %>
    	<%= f.text_field :nom, data: {autocomplete_source: Intervenant.where.not("nom LIKE ?", "%/%").order(:nom).map(&:nom)}, class: 'form-control intervenant-nom' %>
    <% end %>
    <%= link_to_remove_association "Retirer", f, class: 'btn btn-danger' %>
  </div>
  <hr>
</div>