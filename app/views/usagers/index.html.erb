<% provide(:title, 'Usagers') %>
<h1>Usagers</h1>

<%= will_paginate %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag(usagers_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Rechercher" %>
    <%= submit_tag "Rechercher" %>
    <% end %>
  </div>
</div>

<table class="usagers">
  <tr id="table_head">
    <th class="identité">Identité</th>
    <%= render 'table_h' %>
    <th class="pqi">PQI ?</th>
	  <th class="infos">Informations d'ajout</th>
    <th class="supp">Edition et Suppression (privilège admin)</th>
  </tr>
  <% if !@usagers.empty? %>
    <%= render @usagers %>
  <% else %>
    <p>Aucun usager correspondant au(x) terme(s) : "<%= params[:search] %>".</p>
  <% end %>
</table>

<%= will_paginate %>