        <% end %>
        <td>
          <% @rencs = rencs.where(date: (Date.parse(@dates.first))..(Date.parse(@dates.last)), ville: @ville, prev: false, dnv: false) %>
          <%= render 'calc_rencontres' %>
        </td>
        <td>
          <% @rencs = rencs.where(date: (Date.parse(@dates.first))..(Date.parse(@dates.last)), ville: @ville, prev: false, dnv: false) %>
          <%= render 'calc_rencontres_diff' %>
        </td>
        <td>
