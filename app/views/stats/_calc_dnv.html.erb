<% h = 0 %>
<% f = 0 %>
<% @rencs.each do |r| %>
  <% u = Usager.find(r.usager_id) %>
  <% if u.sexe == "Mr" %>
    <% h += 1 %>
  <% else %>
    <% f += 1 %>
  <% end %>
<% end %>
 
<% if f+h == 0 %>
  0
<% else %>
  <%= "#{f+h} (#{h}/#{f})" %>
<% end %>

<% if @ville.nil? && !@dates.nil? %>
  <% @f_dnv = @f_dnv + f %>
  <% @h_dnv = @h_dnv + h %>
<% end %>