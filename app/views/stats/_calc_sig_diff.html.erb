<% h = 0 %>
<% f = 0 %>
<% e = 0 %>
<% ids = [] %>
<% @rencs.each do |r| %>
  <% u = Usager.find(r.usager_id) %>
  <% if !ids.include?(u.id) %>
    <% if u.sexe == "Mr" %>
    	<% h += 1 %>
    <% else %>
    	<% f += 1 %>
    <% end %>
    <% if u.enfants.any? %>
      <% e = e + u.enfants.count %>
    <% end %>
    <% ids << u.id %>
  <% end %>
<% end %>

<% if f+h == 0 %>
  0
<% else %>
  <%= "#{f+h+e} (#{h}/#{f} ; #{e})" %>
<% end %>

<% if @ville.nil? && !@dates.nil? %>
  <% @f_sig_dif = @f_sig_dif + f %>
  <% @h_sig_dif = @h_sig_dif + h %>
  <% @e_sig_dif = @e_sig_dif + e %>
<% end %>