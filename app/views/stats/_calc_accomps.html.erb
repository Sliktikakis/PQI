<% h = 0 %>
<% f = 0 %>
<% e = 0 %>
<% @rencs.each do |r| %>
  <% u = Usager.find(r.usager_id) %>
  <% if u.sexe == "Mr" %>
    <% h += 1 %>
  <% else %>
    <% f += 1 %>
  <% end %>
  <% if r.nb_enf %>
    <% e = e + r.nb_enf %>
  <% end %>
<% end %>

<% if f+h == 0 %>
  0
<% else %>
  <%= "#{f+h+e} (#{h}/#{f} ; #{e})" %>
<% end %>

<% if @ville.nil? && !@dates.nil? %>
  <% @f_acc = @f_acc + f %>
  <% @h_acc = @h_acc + h %>
  <% @e_acc = @e_acc + e %>
<% end %>