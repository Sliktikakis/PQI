<% h = 0 %>
<% f = 0 %>
<% @usagers.each do |u| %>
  <% u_renc = Rencontre.where(usager_id: u.id, date: (Date.parse(@dates.first))..(Date.parse(@dates.last))) %>
  <% if u.sexe == "Mr" %>
  	<% h = h + 1 unless u_renc.count == 0 %>
  <% else %>
  	<% f = f + 1 unless u_renc.count == 0 %>
  <% end %>
<% end %>

<% if f+h == 0 %>
  0
<% else %>
  <%= "#{f+h} (#{h}/#{f})" %>
<% end %>

<% if @ville.nil? && !@dates.nil? %>
  <% @f_dif = @f_dif + f %>
  <% @h_dif = @h_dif + h %>
<% end %>