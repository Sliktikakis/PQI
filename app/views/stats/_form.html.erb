<%= form_for(:stat, url: stats_path) do |f| %>	  
	<div class="form-horizontal">
		<div class="part part-hover">
			<div class="form-group">
	    	<%= f.label :date_deb, "Début de la période", class: "control-label col-md-3 col-sm-3 col-xs-3" %>
	      <div class="col-md-9 col-sm-9 col-xs-9 input-group date" id="datepicker">
	        <%= f.text_field :date_deb, class: 'form-control', data: { date_format: 'DD/MM/YYYY', locale: 'fr' } %>
	        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
	      </div>
	    </div>
	   	<div class="form-group">
	    	<%= f.label :date_fin, "Fin", class: "control-label col-md-3 col-sm-3 col-xs-3" %>
	      <div class="col-md-9 col-sm-9 col-xs-9 input-group date" id="datepicker">
	        <%= f.text_field :date_fin, class: 'form-control', data: { date_format: 'DD/MM/YYYY', locale: 'fr' } %>
	        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
	      </div>
	    </div>
	    <div class="form-group">
	      <%= f.label :ville, class: "control-label col-md-3 col-sm-3 col-xs-3" %>
	      <div class="col-md-9 col-sm-9 col-xs-9">
	        <%= f.select :ville, @villes, prompt: "Choisissez une ville", class: 'form-control' %>
	      </div>
	    </div>
	    <div class="form-group">
	      <%= f.label :type, class: "control-label col-md-3 col-sm-3 col-xs-3" %>
	      <div class="col-md-9 col-sm-9 col-xs-9">
	        <%= f.select :type, @types, prompt: "Choisissez un type de rencontre", class: 'form-control' %>
	      </div>
	    </div>
	    <div class="form-group text-center">
		  	<%= f.submit "Valider", class: "btn btn-primary" %>
			</div>
    </div>
	</div>
<% end %>