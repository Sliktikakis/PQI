<% h = 0 %>
<% f = 0 %>
<% @usagers.each do |u| %>
  <% u_renc = Rencontre.where(usager_id: u.id, date: (Date.parse(@dates.first))..(Date.parse(@dates.last)), prev: false) %>
  <% if u.sexe == "Mr" %>
  	<% h = h + u_renc.count %>
  <% else %>
  	<% f = f + u_renc.count %>
  <% end %>
<% end %>
 
<% if f+h == 0 %>
  0
<% else %>
  <%= "#{f+h} (#{h}/#{f})" %>
<% end %>

<% if @ville.nil? && !@dates.nil? %>
  <% @f_tot = @f_tot + f %>
  <% @h_tot = @h_tot + h %>
<% end %>