<% provide(:title, 'Inscription') %>

<% if logged_in? && current_user.admin? %>
  <% provide(:button_text, 'Créer le compte') %>

  <h1>Ajout d'un nouvel utilisateur</h1>
  
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= render 'form' %>
    </div>
  </div>

<% else %>
  <% provide(:button_text, 'Créer mon compte !') %>

  <h1>Inscription</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= render 'form' %>
    </div>
  </div>

<% end %>